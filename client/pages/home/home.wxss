/* pages/logs/logs.wxss */

.container {
  position: relative;
}

.split {
  height: 2rpx;
  width: 100%;
  background: #ffffff;
}

.dash-split {
  border-top: 1px dashed #999999;
  width: 100%;
}

.color-orange {
  color: #e83e00;
}


/* 商家展示头部样式 */
.res-head {
  padding: 0 32rpx;
  height: 200rpx;
  background: #e83e00;
  position: relative;
}

.res-head .split {
  margin: 20rpx 0 10rpx 0;
}

.head-mess .head-headimg {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  display: inline-block;
}

.head-mess .head-name {
  vertical-align: top;
  display: inline-block;
  color: #ffffff;
  font-size: 40rpx;
}

.head-active {
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
  color: #ffffff;
}


/* 商家点餐展示 */


/* 点餐头部 */
.res-body {
  
}

.res-body .body-head {
  width: 100%;
  display: flex;
  justify-content: space-around;
  height: 70rpx;
  border-bottom: 4rpx solid #f2f2f2;
}

.body-head text {
  display: inline-block;
  text-align: center;
  line-height: 70rpx;
}

.body-head .cur::after {
  width: 100%;
  height: 2rpx;
  background-color: #e83e00;
  display: block;
  content: "";
}


/* 点餐卡片 */

.body-order {
  overflow: hidden;
}

swiper {
  position: absolute;
  bottom: 0;
  top: 270rpx;
  right: 0;
  left: 0;
  height: auto;
}

.body-category {
  display: inline-block;
  width: 150rpx;
  background: #f2f2f2;
}

.body-items {
  position: absolute;
  left: 150rpx;
  width: 600rpx;
  box-sizing: border-box;
  display: inline-block;
  padding: 20rpx 20rpx;
}


/* 点餐分类 */

.body-category text {
  display: inline-block;
  font-size: 30rpx;
  width: 100%;
  height: 90rpx;
  text-align: center;
  line-height: 90rpx;
}

.body-category .cur {
  background: #ffffff;
}


/* 点餐详情 */

.body-items .items-head {
  height: 50rpx;
  line-height: 50rpx;
  font-size: 25rpx;
}

.items-head .color-orange {
  font-size: 20rpx;
}

.items-wrapper {
  height: 200rpx;
  background: #f2f2f2;
  position: relative;
}

.items-left image {
  width: 120rpx;
  height: 120rpx;
  display: inline-block;
}

.items-message {
  display: inline-block;
  vertical-align: top;
  margin-left: 20rpx;
  line-height: 45rpx;
}

.items-message .message-title {
  display: block;
  font-size: 35rpx;
}

.items-message .message-description {
  display: block;
  font-size: 30rpx;
  color: #333333;
}

.items-message .message-price {
  display: block;
}

.message-price .price-sale {
  color: #e83e00;
  font-size: 35rpx;
}

.message-price .price-origin {
  padding-left: 10rpx;
  color: #999999;
  font-size: 30rpx;
  text-decoration: line-through;
}

.items-left .message-discount {
  border: 1px solid #e83e00;
  font-size: 25rpx;
  padding: 0 5rpx;
  color: #e83e00;
}

.items-right {
  position: absolute;
  right: 30rpx;
  top: 50%;
  margin-top: -30rpx;
}

.items-right image{
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
}




/* 底部支付样式 */

.body-pay {
  background: #e83e00;
  position: absolute;
  bottom: 0;
  right: 0;
  left: 0;
  height: 100rpx;
  color: #ffffff;
}

.body-pay image {
  display: inline-block;
  width: 81rpx;
  height: 81rpx;
}